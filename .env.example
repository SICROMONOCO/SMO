# InfluxDB Configuration
INFLUXDB_ENABLED=true
INFLUXDB_URL=http://smo-db:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=my-org
INFLUXDB_BUCKET=smo-metrics

# InfluxDB Initialization (for first-time setup)
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=adminpassword123
DOCKER_INFLUXDB_INIT_ORG=my-org
DOCKER_INFLUXDB_INIT_BUCKET=smo-metrics
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=my-super-secret-auth-token

# Host Monitoring Configuration
# Set to 'true' to enable host-level metrics (requires privileged mode)
HOST_MONITOR=true
